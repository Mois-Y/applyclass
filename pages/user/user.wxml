<about is="pages/about/home/home">
  <scroll-view class="scrollPage">
    <view class="UCenter-bg">
      <!-- <image class="png" mode="widthFix" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big99008.jpg);"></image> -->
      <view class="cu-avatar xl round margin-left margin-right" style="background-image:url({{avatarUrl}});"></view>
      <view class="my-info">
        <view class="text-xl">
          {{nickName}}<view wx:if="{{gender==1}}">
          <text class="icon-male lg text-blue"></text>
          </view><view wx:else="{{gender==2}}">
          <text class="icon-female lg text-pink"></text>
          </view>
        </view>
        <view class="margin-top-sm">
          <text>个人简介</text>
        </view>
      </view>
    </view>
    <view class="padding flex text-center text-grey bg-white shadow-warp">
      <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-orange">10</view>
        <view class="margin-top-sm">
          <text class="icon-attentionfill"></text> 访问次数
        </view>
      </view>

      <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-blue">6</view>
        <view class="margin-top-sm">
          <text class="icon-favorfill"></text> 收藏
        </view>
      </view>

      <view class="flex flex-sub flex-direction">
        <view class="text-xxl text-green">6</view>
        <view class="margin-top-sm">
          <text class="icon-fork"></text> 申请次数
        </view>
      </view>
    </view>



    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
      <view class="cu-item arrow" bindtap="info">
        <view class="cu-bar bg-white">
          <view class="action">
            <text class="icon-myfill text-blue"></text> 个人信息
          </view>
        </view>
      </view>


      <view class="cu-item arrow">
        <view class="cu-bar bg-white">
          <view class="action">
            <text class="icon-formfill text-green"></text> 申请记录
          </view>
        </view>
      </view>

      <view class="cu-item arrow">
        <view class="content" bindtap="showQrcode">
          <text class="icon-appreciatefill text-red"></text> 点赞支持
        </view>
      </view>

      <view class="cu-item arrow">
        <view class="cu-bar bg-white">
          <view class="action">
            <text class="icon-phone text-orange"></text> 联系管理员
          </view>
        </view>
      </view>

      <view class="cu-item arrow">
        <view class="cu-bar bg-white">
          <view class="action">
            <text class="icon-writefill text-cyan"></text> 意见反馈
          </view>
        </view>
      </view>
    </view>

    <view class="cu-tabbar-height"></view>

  </scroll-view>
</about>